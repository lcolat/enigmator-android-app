<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="@dimen/app_padding">

    <TextView
        android:id="@+id/text_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toStartOf="@+id/btn_reject"
        android:layout_toLeftOf="@id/btn_reject"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignBottom="@id/btn_reject"
        android:layout_alignTop="@id/btn_reject"
        android:gravity="center_vertical"
        tools:text="Username"
        android:textColor="@color/black"
        android:textSize="@dimen/text_size"/>

    <ImageButton
        android:id="@+id/btn_reject"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="?android:attr/buttonBarButtonStyle"
        app:srcCompat="@drawable/ic_close_red_24dp"
        android:layout_toLeftOf="@+id/btn_accept"
        android:layout_toStartOf="@id/btn_accept"
        android:contentDescription="@string/btn_reject_description" />

    <ImageButton
        android:id="@+id/btn_accept"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="?android:attr/buttonBarButtonStyle"
        app:srcCompat="@drawable/ic_check_green_24dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:contentDescription="@string/btn_accept_description" />
</RelativeLayout>